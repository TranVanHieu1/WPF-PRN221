@page "/Login"
@model LoginModel
@{
    ViewData["Title"] = "Login";

}

<h2>Login</h2>
<body>
    <form method="post" style="display:flex">
        <div class="col-12">
            <div class="row" style="align-items:center">
                <div class="col-8">
                    <div class="col-2">
                        <label>Email: </label>
                    </div>
                    <div>
                        <input name="txtEmail" type="text" /> </br>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-8">
                    <div class="col-2">
                        <label>Password: </label>
                    </div>
                    <div>
                        <input name="txtPassword" type="password" /> </br>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <input name="btnButton" class="btn btn-primary" type="submit" value="Login" />
                <input type="reset" class="btn btn-danger" value="Cancel" />
            </div>
        </div>


    </form>


</body>